<script>
document.addEventListener('DOMContentLoaded', function() {
    // Update user info
    updateUserInfo();
    
    // Notifications disabled until API is implemented
    console.log('ðŸ“Š Header notifications disabled - API endpoints not yet implemented');
});

function updateUserInfo() {
    try {
        // Wait for AdminAuth to be available
        if (typeof AdminAuth === 'undefined') {
            setTimeout(updateUserInfo, 100);
            return;
        }
        
        const user = AdminAuth.getCurrentUser();
        if (!user) return;
        
        console.log('ðŸ‘¤ Updating header user info:', user);
        
        // Update avatar
        const avatarEl = document.getElementById('user-avatar');
        if (avatarEl) {
            const avatarUrl = AdminAuth.getAvatar();
            avatarEl.src = avatarUrl;
        }
        
    } catch (error) {
        console.error('Error updating user info in header:', error);
    }
}

// Global logout function
function handleLogout() {
    if (typeof AdminAuth !== 'undefined') {
        AdminAuth.logout();
    } else {
        // Fallback logout
        localStorage.removeItem('admin_token');
        localStorage.removeItem('admin_user');
        window.location.href = '{{ path('admin_login') }}';
    }
}

// Make logout function globally accessible
window.handleLogout = handleLogout;
</script> 