{% extends 'admin/base.html.twig' %}

{% block title %}Abonnements - JoodKitchen Admin{% endblock %}

{% block breadcrumb %}
<li class="breadcrumb-item"><a href="{{ path('admin_dashboard') }}">Accueil</a></li>
<li class="breadcrumb-item active">Abonnements</li>
{% endblock %}

{% block content %}
<!-- Abonnements Header -->
<div class="row mb-4">
    <div class="col-12">
        <div class="d-flex justify-content-between align-items-center">
            <div>
                <h1 class="h2 mb-0 jood-dark">
                    <i class="fas fa-calendar-check jood-primary"></i> Gestion des Abonnements
                </h1>
                <p class="text-muted">
                    Gérez les abonnements hebdomadaires et les sélections de repas
                    <span class="badge bg-success ms-2" id="systemStatusBadge">Système Actif</span>
                </p>
            </div>
            <div class="d-flex gap-2">
                <button class="btn btn-outline-success" id="exportAbonnementsBtn">
                    <i class="fas fa-download"></i> Exporter
                </button>
                <button class="btn btn-outline-primary" id="refreshDataBtn">
                    <i class="fas fa-sync-alt"></i> Actualiser
                </button>
                <div class="btn-group">
                    <button class="btn btn-primary dropdown-toggle" data-coreui-toggle="dropdown">
                        <i class="fas fa-tools"></i> Actions
                    </button>
                    <ul class="dropdown-menu">
                        <li><a class="dropdown-item" href="#" id="sendRemindersBtn">
                            <i class="fas fa-envelope"></i> Envoyer Rappels
                        </a></li>
                        <li><a class="dropdown-item" href="#" id="activatePendingBtn">
                            <i class="fas fa-check-circle"></i> Activer en Attente
                        </a></li>
                        <li><hr class="dropdown-divider"></li>
                        <li><a class="dropdown-item" href="#" id="clearCacheBtn">
                            <i class="fas fa-broom"></i> Vider le Cache
                        </a></li>
                    </ul>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Statistics Dashboard -->
<div class="row g-4 mb-4" id="statisticsDashboard">
    <!-- Overview Stats -->
    <div class="col-xl-3 col-md-6">
        <div class="card border-0 bg-gradient-primary text-white">
            <div class="card-body">
                <div class="d-flex justify-content-between align-items-center">
                    <div>
                        <div class="fs-4 fw-bold" id="totalAbonnementsCount">0</div>
                        <div class="small opacity-75">Total Abonnements</div>
                    </div>
                    <div class="fs-1 opacity-50">
                        <i class="fas fa-calendar-check"></i>
                    </div>
                </div>
                <div class="progress mt-3" style="height: 4px;">
                    <div class="progress-bar bg-white opacity-25" role="progressbar" style="width: 100%"></div>
                </div>
            </div>
        </div>
    </div>

    <!-- Active Subscriptions -->
    <div class="col-xl-3 col-md-6">
        <div class="card border-0" style="background: linear-gradient(135deg, #28a745 0%, #20c997 100%); color: white;">
            <div class="card-body">
                <div class="d-flex justify-content-between align-items-center">
                    <div>
                        <div class="fs-4 fw-bold" id="activeAbonnementsCount">0</div>
                        <div class="small opacity-75">Actifs</div>
                    </div>
                    <div class="fs-1 opacity-50">
                        <i class="fas fa-check-circle"></i>
                    </div>
                </div>
                <div class="progress mt-3" style="height: 4px;">
                    <div class="progress-bar bg-white opacity-25" role="progressbar" style="width: 100%"></div>
                </div>
            </div>
        </div>
    </div>

    <!-- Pending Confirmations -->
    <div class="col-xl-3 col-md-6">
        <div class="card border-0" style="background: linear-gradient(135deg, #ffc107 0%, #fd7e14 100%); color: white;">
            <div class="card-body">
                <div class="d-flex justify-content-between align-items-center">
                    <div>
                        <div class="fs-4 fw-bold" id="pendingConfirmationsCount">0</div>
                        <div class="small opacity-75">En Confirmation</div>
                    </div>
                    <div class="fs-1 opacity-50">
                        <i class="fas fa-clock"></i>
                    </div>
                </div>
                <div class="progress mt-3" style="height: 4px;">
                    <div class="progress-bar bg-white opacity-25" role="progressbar" style="width: 100%"></div>
                </div>
            </div>
        </div>
    </div>

    <!-- Weekly Revenue -->
    <div class="col-xl-3 col-md-6">
        <div class="card border-0" style="background: linear-gradient(135deg, #6f42c1 0%, #e83e8c 100%); color: white;">
            <div class="card-body">
                <div class="d-flex justify-content-between align-items-center">
                    <div>
                        <div class="fs-4 fw-bold" id="weeklyRevenueAmount">0 MAD</div>
                        <div class="small opacity-75">Revenus Hebdo</div>
                    </div>
                    <div class="fs-1 opacity-50">
                        <i class="fas fa-coins"></i>
                    </div>
                </div>
                <div class="progress mt-3" style="height: 4px;">
                    <div class="progress-bar bg-white opacity-25" role="progressbar" style="width: 100%"></div>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- System Alerts -->
<div id="systemAlertsContainer" class="mb-4" style="display: none;">
    <!-- Dynamic alerts will be loaded here -->
</div>

<!-- Main Content Card with Tabs -->
<div class="card mb-4">
    <div class="card-header">
        <div class="row align-items-center">
            <div class="col-lg-8">
                <!-- Tab Navigation -->
                <ul class="nav nav-tabs card-header-tabs mb-0" id="abonnementsMainTabs" role="tablist">
                    <li class="nav-item" role="presentation">
                        <button class="nav-link active" id="table-view-tab" data-coreui-toggle="tab" data-coreui-target="#table-view" type="button" role="tab">
                            <i class="fas fa-table"></i> Vue Tableau
                            <span class="badge bg-light text-dark ms-1" id="tableViewCount">0</span>
                        </button>
                    </li>
                    <li class="nav-item" role="presentation">
                        <button class="nav-link" id="calendar-view-tab" data-coreui-toggle="tab" data-coreui-target="#calendar-view" type="button" role="tab">
                            <i class="fas fa-calendar-alt"></i> Calendrier Hebdo
                            <span class="badge bg-light text-dark ms-1" id="calendarViewCount">0</span>
                        </button>
                    </li>
                    <li class="nav-item" role="presentation">
                        <button class="nav-link" id="analytics-view-tab" data-coreui-toggle="tab" data-coreui-target="#analytics-view" type="button" role="tab">
                            <i class="fas fa-chart-line"></i> Analytics
                        </button>
                    </li>
                    <li class="nav-item" role="presentation">
                        <button class="nav-link" id="status-management-tab" data-coreui-toggle="tab" data-coreui-target="#status-management" type="button" role="tab">
                            <i class="fas fa-tasks"></i> Gestion Statuts
                            <span class="badge bg-warning text-dark ms-1" id="statusManagementCount">0</span>
                        </button>
                    </li>
                </ul>
            </div>
            <div class="col-lg-4">
                <!-- View Controls and Search -->
                <div class="d-flex justify-content-end align-items-center gap-2">
                    <div class="btn-group btn-group-sm" role="group">
                        <button type="button" class="btn btn-outline-secondary active" id="compactViewBtn" data-view="compact">
                            <i class="fas fa-compress"></i>
                        </button>
                        <button type="button" class="btn btn-outline-secondary" id="detailedViewBtn" data-view="detailed">
                            <i class="fas fa-expand"></i>
                        </button>
                    </div>
                    
                    <div class="input-group input-group-sm" style="width: 200px;">
                        <span class="input-group-text"><i class="fas fa-search"></i></span>
                        <input type="text" class="form-control" id="globalSearchInput" placeholder="Rechercher...">
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="card-body p-0">
        <!-- Tab Content -->
        <div class="tab-content" id="abonnementsTabContent">
            
            <!-- Table View Tab -->
            <div class="tab-pane fade show active" id="table-view" role="tabpanel">
                <!-- Advanced Filters -->
                <div class="border-bottom p-3 bg-light">
                    <div class="row g-3">
                        <div class="col-md-2">
                            <select class="form-select form-select-sm" id="statusFilter">
                                <option value="">Tous les statuts</option>
                                <option value="en_confirmation">En Confirmation</option>
                                <option value="actif">Actif</option>
                                <option value="suspendu">Suspendu</option>
                                <option value="expire">Expiré</option>
                                <option value="annule">Annulé</option>
                            </select>
                        </div>
                        <div class="col-md-2">
                            <select class="form-select form-select-sm" id="typeFilter">
                                <option value="">Tous les types</option>
                                <option value="hebdo">Hebdomadaire</option>
                                <option value="mensuel">Mensuel</option>
                            </select>
                        </div>
                        <div class="col-md-2">
                            <input type="date" class="form-control form-control-sm" id="dateFromFilter" placeholder="Date début">
                        </div>
                        <div class="col-md-2">
                            <input type="date" class="form-control form-control-sm" id="dateToFilter" placeholder="Date fin">
                        </div>
                        <div class="col-md-2">
                            <input type="text" class="form-control form-control-sm" id="customerSearchFilter" placeholder="Rechercher client...">
                        </div>
                        <div class="col-md-2">
                            <button class="btn btn-outline-secondary btn-sm" id="clearFiltersBtn">
                                <i class="fas fa-times"></i> Effacer
                            </button>
                        </div>
                    </div>
                    
                    <!-- Active Filters Display -->
                    <div id="activeFiltersContainer" class="mt-2" style="display: none;">
                        <!-- Active filters will be displayed here -->
                    </div>
                </div>

                <!-- Loading State -->
                <div id="tableLoadingState" class="text-center py-5" style="display: none;">
                    <div class="spinner-border text-primary" role="status">
                        <span class="visually-hidden">Chargement...</span>
                    </div>
                    <p class="mt-3 text-muted">Chargement des abonnements...</p>
                </div>

                <!-- Subscriptions Table -->
                <div class="table-responsive" id="subscriptionsTableContainer">
                    <table class="table table-hover mb-0" id="subscriptionsTable">
                        <thead class="table-light">
                            <tr>
                                <th width="40">
                                    <div class="form-check">
                                        <input class="form-check-input" type="checkbox" id="selectAllCheckbox">
                                    </div>
                                </th>
                                <th>Client</th>
                                <th>Type</th>
                                <th>Statut</th>
                                <th>Période</th>
                                <th>Sélections</th>
                                <th>Montant</th>
                                <th>Progression</th>
                                <th width="120">Actions</th>
                            </tr>
                        </thead>
                        <tbody id="subscriptionsTableBody">
                            <!-- Dynamic content will be loaded here -->
                        </tbody>
                    </table>
                </div>

                <!-- Pagination -->
                <div class="p-3 border-top">
                    <div class="d-flex justify-content-between align-items-center">
                        <div class="text-muted small">
                            Affichage de <span id="paginationInfo">0-0 sur 0</span> abonnements
                        </div>
                        <nav id="paginationNav">
                            <!-- Pagination will be rendered here -->
                        </nav>
                    </div>
                </div>
            </div>

            <!-- Calendar View Tab -->
            <div class="tab-pane fade" id="calendar-view" role="tabpanel">
                <div class="p-3">
                    <!-- Week Navigation -->
                    <div class="d-flex justify-content-between align-items-center mb-4">
                        <div>
                            <h5 class="mb-1">Planification Hebdomadaire</h5>
                            <p class="text-muted small mb-0">Sélections de repas par cuisine et jour</p>
                        </div>
                        <div class="d-flex gap-2 align-items-center">
                            <button class="btn btn-outline-primary btn-sm" id="prevWeekBtn">
                                <i class="fas fa-chevron-left"></i> Semaine Précédente
                            </button>
                            <button class="btn btn-primary btn-sm" id="currentWeekBtn">
                                Semaine Actuelle
                            </button>
                            <button class="btn btn-outline-primary btn-sm" id="nextWeekBtn">
                                Semaine Suivante <i class="fas fa-chevron-right"></i>
                            </button>
                        </div>
                    </div>

                    <!-- Calendar Grid -->
                    <div class="card border-0 shadow-sm">
                        <div class="card-header bg-gradient-primary text-white">
                            <div class="d-flex justify-content-between align-items-center">
                                <h6 class="mb-0" id="weekRangeDisplay">Semaine du ...</h6>
                                <div class="d-flex gap-2">
                                    <span class="badge bg-light text-dark">🇲🇦 Marocain</span>
                                    <span class="badge bg-light text-dark">🇮🇹 Italien</span>
                                    <span class="badge bg-light text-dark">🌍 International</span>
                                </div>
                            </div>
                        </div>
                        <div class="card-body p-0">
                            <div class="table-responsive">
                                <table class="table table-bordered mb-0" id="weeklyCalendarTable">
                                    <thead class="table-light">
                                        <tr>
                                            <th class="text-center" width="14%">Lundi</th>
                                            <th class="text-center" width="14%">Mardi</th>
                                            <th class="text-center" width="14%">Mercredi</th>
                                            <th class="text-center" width="14%">Jeudi</th>
                                            <th class="text-center" width="14%">Vendredi</th>
                                            <th class="text-center" width="15%">Samedi</th>
                                            <th class="text-center" width="15%">Dimanche</th>
                                        </tr>
                                    </thead>
                                    <tbody id="weeklyCalendarBody">
                                        <!-- Calendar data will be loaded here -->
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>

                    <!-- Incomplete Selections Alert -->
                    <div class="alert alert-warning mt-4" id="incompleteSelectionsAlert" style="display: none;">
                        <div class="d-flex align-items-center">
                            <i class="fas fa-exclamation-triangle me-2"></i>
                            <div class="flex-grow-1">
                                <strong>Sélections Incomplètes Détectées</strong>
                                <p class="mb-0 small">Certains clients n'ont pas terminé leurs sélections pour cette semaine.</p>
                            </div>
                            <button class="btn btn-outline-warning btn-sm" id="viewIncompleteBtn">
                                <i class="fas fa-eye"></i> Voir Détails
                            </button>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Analytics View Tab -->
            <div class="tab-pane fade" id="analytics-view" role="tabpanel">
                <div class="p-4">
                    <div class="row g-4">
                        <!-- Conversion Metrics -->
                        <div class="col-lg-6">
                            <div class="card border-0 shadow-sm">
                                <div class="card-header bg-light">
                                    <h6 class="mb-0">
                                        <i class="fas fa-chart-line text-primary"></i> Taux de Conversion
                                    </h6>
                                </div>
                                <div class="card-body">
                                    <canvas id="conversionChart" height="200"></canvas>
                                </div>
                            </div>
                        </div>

                        <!-- Cuisine Preferences -->
                        <div class="col-lg-6">
                            <div class="card border-0 shadow-sm">
                                <div class="card-header bg-light">
                                    <h6 class="mb-0">
                                        <i class="fas fa-chart-pie text-success"></i> Préférences Culinaires
                                    </h6>
                                </div>
                                <div class="card-body">
                                    <canvas id="cuisinePreferencesChart" height="200"></canvas>
                                </div>
                            </div>
                        </div>

                        <!-- Revenue Trends -->
                        <div class="col-12">
                            <div class="card border-0 shadow-sm">
                                <div class="card-header bg-light">
                                    <div class="d-flex justify-content-between align-items-center">
                                        <h6 class="mb-0">
                                            <i class="fas fa-chart-area text-info"></i> Évolution des Revenus
                                        </h6>
                                        <div class="btn-group btn-group-sm">
                                            <button class="btn btn-outline-primary active" data-period="week">Semaine</button>
                                            <button class="btn btn-outline-primary" data-period="month">Mois</button>
                                            <button class="btn btn-outline-primary" data-period="quarter">Trimestre</button>
                                        </div>
                                    </div>
                                </div>
                                <div class="card-body">
                                    <canvas id="revenueTrendsChart" height="100"></canvas>
                                </div>
                            </div>
                        </div>

                        <!-- Key Metrics Grid -->
                        <div class="col-12">
                            <div class="row g-3">
                                <div class="col-md-3">
                                    <div class="card border-start border-primary border-4">
                                        <div class="card-body">
                                            <div class="d-flex align-items-center">
                                                <div class="flex-grow-1">
                                                    <div class="text-muted small">Taux de Conversion</div>
                                                    <div class="fw-bold" id="conversionRateMetric">0%</div>
                                                </div>
                                                <div class="text-primary">
                                                    <i class="fas fa-percentage fs-4"></i>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <div class="col-md-3">
                                    <div class="card border-start border-success border-4">
                                        <div class="card-body">
                                            <div class="d-flex align-items-center">
                                                <div class="flex-grow-1">
                                                    <div class="text-muted small">Revenus Moyens</div>
                                                    <div class="fw-bold" id="averageRevenueMetric">0 MAD</div>
                                                </div>
                                                <div class="text-success">
                                                    <i class="fas fa-coins fs-4"></i>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <div class="col-md-3">
                                    <div class="card border-start border-warning border-4">
                                        <div class="card-body">
                                            <div class="d-flex align-items-center">
                                                <div class="flex-grow-1">
                                                    <div class="text-muted small">Rétention Client</div>
                                                    <div class="fw-bold" id="retentionRateMetric">0%</div>
                                                </div>
                                                <div class="text-warning">
                                                    <i class="fas fa-user-check fs-4"></i>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <div class="col-md-3">
                                    <div class="card border-start border-info border-4">
                                        <div class="card-body">
                                            <div class="d-flex align-items-center">
                                                <div class="flex-grow-1">
                                                    <div class="text-muted small">Croissance</div>
                                                    <div class="fw-bold" id="growthRateMetric">+0%</div>
                                                </div>
                                                <div class="text-info">
                                                    <i class="fas fa-chart-line fs-4"></i>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <!-- Recent Activity Section -->
                        <div class="col-12 mt-4">
                            <div id="recent-activity-container">
                                <!-- Recent activity will be loaded here by JavaScript -->
                                <div class="text-center py-4">
                                    <div class="spinner-border text-primary" role="status">
                                        <span class="visually-hidden">Chargement de l'activité récente...</span>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Status Management Tab -->
            <div class="tab-pane fade" id="status-management" role="tabpanel">
                <div class="p-4">
                    <div class="row g-4">
                        <!-- Workflow Visualization -->
                        <div class="col-12">
                            <div class="card border-0 shadow-sm">
                                <div class="card-header bg-gradient-primary text-white">
                                    <h6 class="mb-0">
                                        <i class="fas fa-project-diagram"></i> Workflow des Statuts d'Abonnement
                                    </h6>
                                </div>
                                <div class="card-body">
                                    <div class="workflow-container">
                                        <div class="workflow-step" data-status="en_confirmation">
                                            <div class="step-card bg-warning bg-opacity-10 border-warning">
                                                <div class="step-icon text-warning">
                                                    <i class="fas fa-clock fa-2x"></i>
                                                </div>
                                                <div class="step-content">
                                                    <h6 class="fw-bold">En Confirmation</h6>
                                                    <div class="step-count" id="statusEnConfirmation">0</div>
                                                    <small class="text-muted">En attente de paiement</small>
                                                </div>
                                                <div class="step-actions">
                                                    <button class="btn btn-sm btn-warning" onclick="abonnementManager.showStatusDetails('en_confirmation')">
                                                        <i class="fas fa-eye"></i> Voir
                                                    </button>
                                                </div>
                                            </div>
                                            <div class="workflow-arrow">
                                                <i class="fas fa-arrow-right text-muted"></i>
                                            </div>
                                        </div>

                                        <div class="workflow-step" data-status="actif">
                                            <div class="step-card bg-success bg-opacity-10 border-success">
                                                <div class="step-icon text-success">
                                                    <i class="fas fa-check-circle fa-2x"></i>
                                                </div>
                                                <div class="step-content">
                                                    <h6 class="fw-bold">Actif</h6>
                                                    <div class="step-count" id="statusActif">0</div>
                                                    <small class="text-muted">Abonnement actif</small>
                                                </div>
                                                <div class="step-actions">
                                                    <button class="btn btn-sm btn-success" onclick="abonnementManager.showStatusDetails('actif')">
                                                        <i class="fas fa-eye"></i> Voir
                                                    </button>
                                                </div>
                                            </div>
                                            <div class="workflow-arrow">
                                                <i class="fas fa-arrow-down text-muted"></i>
                                            </div>
                                        </div>

                                        <div class="workflow-bottom">
                                            <div class="workflow-step" data-status="suspendu">
                                                <div class="step-card bg-info bg-opacity-10 border-info">
                                                    <div class="step-icon text-info">
                                                        <i class="fas fa-pause-circle fa-2x"></i>
                                                    </div>
                                                    <div class="step-content">
                                                        <h6 class="fw-bold">Suspendu</h6>
                                                        <div class="step-count" id="statusSuspendu">0</div>
                                                        <small class="text-muted">Temporairement arrêté</small>
                                                    </div>
                                                    <div class="step-actions">
                                                        <button class="btn btn-sm btn-info" onclick="abonnementManager.showStatusDetails('suspendu')">
                                                            <i class="fas fa-eye"></i> Voir
                                                        </button>
                                                    </div>
                                                </div>
                                            </div>

                                            <div class="workflow-step" data-status="expire">
                                                <div class="step-card bg-secondary bg-opacity-10 border-secondary">
                                                    <div class="step-icon text-secondary">
                                                        <i class="fas fa-calendar-times fa-2x"></i>
                                                    </div>
                                                    <div class="step-content">
                                                        <h6 class="fw-bold">Expiré</h6>
                                                        <div class="step-count" id="statusExpire">0</div>
                                                        <small class="text-muted">Période terminée</small>
                                                    </div>
                                                    <div class="step-actions">
                                                        <button class="btn btn-sm btn-secondary" onclick="abonnementManager.showStatusDetails('expire')">
                                                            <i class="fas fa-eye"></i> Voir
                                                        </button>
                                                    </div>
                                                </div>
                                            </div>

                                            <div class="workflow-step" data-status="annule">
                                                <div class="step-card bg-danger bg-opacity-10 border-danger">
                                                    <div class="step-icon text-danger">
                                                        <i class="fas fa-times-circle fa-2x"></i>
                                                    </div>
                                                    <div class="step-content">
                                                        <h6 class="fw-bold">Annulé</h6>
                                                        <div class="step-count" id="statusAnnule">0</div>
                                                        <small class="text-muted">Définitivement fermé</small>
                                                    </div>
                                                    <div class="step-actions">
