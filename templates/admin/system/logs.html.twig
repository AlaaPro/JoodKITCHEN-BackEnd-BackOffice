                <button class="btn btn-outline-primary" data-coreui-toggle="modal" data-coreui-target="#exportLogsModal">
                    <i class="fas fa-download"></i> Exporter
                </button>
            </div>
        </div>
    </div>
</div>

<!-- Log Stats -->
