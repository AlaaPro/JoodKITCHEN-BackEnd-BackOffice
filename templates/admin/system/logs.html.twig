function formatTimeAgo(dateString) {
    if (!dateString) return 'N/A';
    
    try {
        // Handle both "18/06/2025 14:30:15" and ISO formats
        let date;
        if (dateString.includes('/')) {
            const parts = dateString.split(' ');
            const dateParts = parts[0].split('/');
            const timeParts = parts[1]?.split(':') || ['00', '00', '00'];
            date = new Date(dateParts[2], dateParts[1] - 1, dateParts[0], timeParts[0], timeParts[1], timeParts[2]);
        } else {
            date = new Date(dateString);
        }
        
        const now = new Date();
        const diffInSeconds = Math.floor((now - date) / 1000);
        
        if (diffInSeconds < 60) return 'À l\'instant';
        if (diffInSeconds < 3600) return `${Math.floor(diffInSeconds / 60)}m`;
        if (diffInSeconds < 86400) return `${Math.floor(diffInSeconds / 3600)}h`;
        return `${Math.floor(diffInSeconds / 86400)}j`;
    } catch (error) {
        console.warn('Date parsing error:', error, dateString);
        return 'N/A';
    }
}

// Detailed Errors Table Manager
class DetailedErrorsTable {
    constructor() {
        this.api = window.logsAPI || new LogsAPI();
        this.currentLimit = 20;
        this.isExtended = false;
        this.errors = [];
    }

    static init() {
        const table = new DetailedErrorsTable();
        table.bindEvents();
        table.loadErrors();
        window.detailedErrorsTable = table;
    }

    bindEvents() {
        // Refresh button
        const refreshBtn = document.getElementById('refreshDetailedErrors');
        if (refreshBtn) {
            refreshBtn.addEventListener('click', () => {
                this.loadErrors();
            });
        }

        // Toggle view button
        const toggleBtn = document.getElementById('toggleErrorsView');
        if (toggleBtn) {
            toggleBtn.addEventListener('click', () => {
                this.toggleView();
            });
        }

        // Load more button
        const loadMoreBtn = document.getElementById('loadMoreErrors');
        if (loadMoreBtn) {
            loadMoreBtn.addEventListener('click', () => {
                this.loadMoreErrors();
            });
        }

        // Limit select
        const limitSelect = document.getElementById('errorLimitSelect');
        if (limitSelect) {
            limitSelect.addEventListener('change', () => {
                this.currentLimit = parseInt(limitSelect.value);
                this.loadErrors();
            });
        }
    }

    async loadErrors() {
        const tbody = document.getElementById('detailedErrorsBody');
        const countSpan = document.getElementById('detailedErrorsCount');
        
        if (!tbody) return;

        try {
            // Show loading
            tbody.innerHTML = `
                <tr>
                    <td colspan="6" class="text-center py-4">
                        <span class="spinner-border spinner-border-sm me-2" role="status"></span>
                        Chargement des erreurs détaillées...
                    </td>
                </tr>
            `;

            const response = await fetch(`/api/admin/logs/errors/detailed?limit=${this.currentLimit}`, {
                headers: {
                    'Authorization': 'Bearer ' + (localStorage.getItem('admin_token') || ''),
                    'Accept': 'application/json'
                }
            });

            if (!response.ok) {
                throw new Error('Failed to fetch detailed errors');
            }

            const result = await response.json();
            
            if (result.success && result.data) {
                this.errors = result.data;
                this.renderErrors();
                if (countSpan) countSpan.textContent = result.count || this.errors.length;
            } else {
                throw new Error(result.error || 'Failed to load errors');
            }

        } catch (error) {
            console.error('Error loading detailed errors:', error);
            tbody.innerHTML = `
                <tr>
                    <td colspan="6" class="text-center py-4 text-danger">
                        <i class="fas fa-exclamation-triangle me-2"></i>
                        Erreur lors du chargement des erreurs détaillées
                    </td>
                </tr>
            `;
        }
    }

    renderErrors() {
        const tbody = document.getElementById('detailedErrorsBody');
        if (!tbody || !this.errors.length) {
            tbody.innerHTML = `
                <tr>
                    <td colspan="6" class="text-center py-4 text-muted">
                        <i class="fas fa-info-circle me-2"></i>
                        Aucune erreur trouvée
                    </td>
                </tr>
            `;
            return;
        }

        const html = this.errors.map(error => `
            <tr>
                <td>
                    <small class="text-muted">
                        ${error.formatted_time || error.timestamp}
                    </small>
                </td>
                <td>
                    <span class="badge bg-${this.getSeverityColor(error.severity)}">
                        ${this.getSeverityLabel(error.severity)}
                    </span>
                </td>
                <td>
                    <span class="badge bg-secondary">
                        ${error.component}
                    </span>
                </td>
                <td>
                    <small class="text-muted">
                        ${error.source}
                    </small>
                </td>
                <td>
                    <div class="error-message" style="max-width: 400px;">
                        <div class="text-truncate" title="${this.escapeHtml(error.full_message || error.message)}">
                            ${this.escapeHtml(error.message)}
                        </div>
                        ${error.full_message && error.full_message !== error.message ? 
                            `<button class="btn btn-link btn-sm p-0 mt-1 expand-error" onclick="window.detailedErrorsTable.showFullError('${error.id}')">
                                <small>Voir complet</small>
                            </button>` : ''
                        }
                    </div>
                </td>
                <td>
                    <div class="dropdown">
                        <button class="btn btn-sm btn-outline-secondary" data-coreui-toggle="dropdown">
                            <i class="fas fa-ellipsis-v"></i>
                        </button>
                        <ul class="dropdown-menu">
                            <li><a class="dropdown-item" onclick="window.detailedErrorsTable.showFullError('${error.id}')">
                                <i class="fas fa-eye me-2"></i>Détails
                            </a></li>
                            <li><a class="dropdown-item" onclick="window.detailedErrorsTable.copyError('${error.id}')">
                                <i class="fas fa-copy me-2"></i>Copier
                            </a></li>
                        </ul>
                    </div>
                </td>
            </tr>
        `).join('');

        tbody.innerHTML = html;
    }

    getSeverityColor(severity) {
        const colors = {
            'critical': 'danger',
            'error': 'danger', 
            'warning': 'warning',
            'info': 'info'
        };
        return colors[severity] || 'secondary';
    }

    getSeverityLabel(severity) {
        const labels = {
            'critical': 'Critique',
            'error': 'Erreur',
            'warning': 'Avertissement', 
            'info': 'Info'
        };
        return labels[severity] || severity;
    }

    escapeHtml(text) {
        const div = document.createElement('div');
        div.textContent = text;
        return div.innerHTML;
    }

    showFullError(errorId) {
        const error = this.errors.find(e => e.id === errorId);
        if (!error) return;

        // Create modal content
        const modal = document.createElement('div');
        modal.className = 'modal fade';
        modal.innerHTML = `
            <div class="modal-dialog modal-lg">
                <div class="modal-content">
                    <div class="modal-header">
                        <h5 class="modal-title">Détails de l'erreur</h5>
                        <button type="button" class="btn-close" data-coreui-dismiss="modal"></button>
                    </div>
                    <div class="modal-body">
                        <dl class="row">
                            <dt class="col-sm-3">Date/Heure:</dt>
                            <dd class="col-sm-9">${error.formatted_time}</dd>
                            
                            <dt class="col-sm-3">Sévérité:</dt>
                            <dd class="col-sm-9">
                                <span class="badge bg-${this.getSeverityColor(error.severity)}">
                                    ${this.getSeverityLabel(error.severity)}
                                </span>
                            </dd>
                            
                            <dt class="col-sm-3">Composant:</dt>
                            <dd class="col-sm-9">${error.component}</dd>
                            
                            <dt class="col-sm-3">Source:</dt>
                            <dd class="col-sm-9">${error.source}</dd>
                            
                            <dt class="col-sm-3">Message:</dt>
                            <dd class="col-sm-9">
                                <pre class="bg-light p-3 rounded">${this.escapeHtml(error.full_message || error.message)}</pre>
                            </dd>
                        </dl>
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" data-coreui-dismiss="modal">Fermer</button>
                        <button type="button" class="btn btn-primary" onclick="navigator.clipboard.writeText('${this.escapeHtml(error.full_message || error.message)}')">
                            <i class="fas fa-copy me-2"></i>Copier
                        </button>
                    </div>
                </div>
            </div>
        `;

        document.body.appendChild(modal);
        const modalInstance = new coreui.Modal(modal);
        modalInstance.show();

        // Remove modal when hidden
        modal.addEventListener('hidden.coreui.modal', () => {
            modal.remove();
        });
    }

    copyError(errorId) {
        const error = this.errors.find(e => e.id === errorId);
        if (error) {
            navigator.clipboard.writeText(error.full_message || error.message).then(() => {
                window.showSuccess('Erreur copiée dans le presse-papiers');
            });
        }
    }

    toggleView() {
        const table = document.getElementById('detailedErrorsTable');
        const toggleBtn = document.getElementById('toggleErrorsView');
        
        if (!table || !toggleBtn) return;

        this.isExtended = !this.isExtended;
        
        if (this.isExtended) {
            table.style.fontSize = '0.85rem';
            toggleBtn.innerHTML = '<i class="fas fa-compress"></i> Vue normale';
        } else {
            table.style.fontSize = '';
            toggleBtn.innerHTML = '<i class="fas fa-expand"></i> Vue étendue';
        }
    }

    async loadMoreErrors() {
        this.currentLimit += 20;
        await this.loadErrors();
    }
}
</script>


