<!-- Add Menu Modal -->
<div class="modal fade" id="addMenuModal" tabindex="-1">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header jood-primary-bg">
                <h5 class="modal-title text-white">
                    <i class="fas fa-plus"></i> Nouveau Menu
                </h5>
                <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body">
                <form id="menuForm">
                    <div class="row g-3">
                        <div class="col-md-8">
                            <label class="form-label">Nom du menu *</label>
                            <input type="text" class="form-control" name="nom" placeholder="Ex: Menu Royal" required>
                        </div>
                        <div class="col-md-4">
                            <label class="form-label">Prix (€) *</label>
                            <input type="number" class="form-control" name="prix" step="0.10" placeholder="35.90" required>
                        </div>
                        <div class="col-12">
                            <label class="form-label">Description</label>
                            <textarea class="form-control" name="description" rows="3" placeholder="Description du menu..."></textarea>
                        </div>
                        <div class="col-md-6">
                            <label class="form-label">Type de menu</label>
                            <select class="form-select" name="type">
                                <option value="normal">Menu normal</option>
                                <option value="menu_du_jour">Menu du jour</option>
                            </select>
                        </div>
                        <div class="col-md-6">
                            <label class="form-label">Tag/Cuisine</label>
                            <select class="form-select" name="tag">
                                <option value="">Aucun tag</option>
                                <option value="marocain">Marocain</option>
                                <option value="italien">Italien</option>
                                <option value="international">International</option>
                                <option value="familial">Familial</option>
                                <option value="decouverte">Découverte</option>
                            </select>
                        </div>
                        <div class="col-md-6">
                            <label class="form-label">Jour de la semaine</label>
                            <select class="form-select" name="jourSemaine">
                                <option value="">Aucun (menu permanent)</option>
                                <option value="dejeuner">Déjeuner</option>
                                <option value="diner">Dîner</option>
                            </select>
                        </div>
                        <div class="col-md-6">
                            <label class="form-label">Date spécifique</label>
                            <input type="date" class="form-control" name="date">
                        </div>
                        <div class="col-12">
                            <label class="form-label">Image du menu</label>
                            <input type="file" class="form-control" name="image" accept="image/*">
                        </div>
                        <div class="col-12">
                            <div class="form-check">
                                <input class="form-check-input" type="checkbox" name="actif" id="menuActive" checked>
                                <label class="form-check-label" for="menuActive">
                                    <i class="fas fa-toggle-on text-success"></i> Menu actif
                                </label>
                            </div>
                        </div>
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">
                    <i class="fas fa-times"></i> Annuler
                </button>
                <button type="button" class="btn btn-primary" id="saveMenuBtn">
                    <i class="fas fa-save"></i> Enregistrer
                </button>
            </div>
        </div>
    </div>
</div>
{% endblock %}

{% block javascripts %}
<!-- Menu API -->
<script src="{{ asset('js/admin/managers/menu-api.js') }}"></script>
