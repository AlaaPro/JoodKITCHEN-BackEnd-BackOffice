{% extends 'admin/base.html.twig' %}

{% block title %}Plats - JoodKitchen Admin{% endblock %}

{% block breadcrumb %}
<li class="breadcrumb-item"><a href="{{ path('admin_dashboard') }}">Accueil</a></li>
<li class="breadcrumb-item active">Plats</li>
{% endblock %}

{% block content %}
<!-- Dishes Header -->
<div class="row mb-4">
    <div class="col-12">
        <div class="d-flex justify-content-between align-items-center">
            <div>
                <h1 class="h2 mb-0 jood-dark">Gestion des Plats</h1>
                <p class="text-muted">Gérez votre carte et vos spécialités</p>
            </div>
            <div>
                <button class="btn btn-primary me-2" data-bs-toggle="modal" data-bs-target="#addDishModal">
                    <i class="fas fa-plus"></i> Nouveau Plat
                </button>
                <div class="btn-group">
                    <button class="btn btn-outline-primary" id="gridViewBtn">
                        <i class="fas fa-th"></i>
                    </button>
                    <button class="btn btn-outline-primary" id="listViewBtn">
                        <i class="fas fa-list"></i>
                    </button>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Dishes Stats -->
<div class="row g-4 mb-4">
    <div class="col-lg-3 col-sm-6">
        <div class="card jood-widget-card jood-primary-bg">
            <div class="card-body">
                <div class="d-flex align-items-center">
                    <div class="flex-grow-1">
                        <div class="widget-value stat-total">0</div>
                        <div class="widget-label">Total Plats</div>
                    </div>
                    <div class="flex-shrink-0">
                        <i class="fas fa-utensils fa-2x opacity-75"></i>
                    </div>
                </div>
            </div>
        </div>
    </div>
    
    <div class="col-lg-3 col-sm-6">
        <div class="card jood-widget-card jood-success-bg">
            <div class="card-body">
                <div class="d-flex align-items-center">
                    <div class="flex-grow-1">
                        <div class="widget-value stat-available">0</div>
                        <div class="widget-label">Disponibles</div>
                    </div>
                    <div class="flex-shrink-0">
                        <i class="fas fa-check-circle fa-2x opacity-75"></i>
                    </div>
                </div>
            </div>
        </div>
    </div>
    
    <div class="col-lg-3 col-sm-6">
        <div class="card jood-widget-card jood-warning-bg">
            <div class="card-body">
                <div class="d-flex align-items-center">
                    <div class="flex-grow-1">
                        <div class="widget-value stat-unavailable">0</div>
                        <div class="widget-label">En rupture</div>
                    </div>
                    <div class="flex-shrink-0">
                        <i class="fas fa-exclamation-triangle fa-2x opacity-75"></i>
                    </div>
                </div>
            </div>
        </div>
    </div>
    
    <div class="col-lg-3 col-sm-6">
        <div class="card jood-widget-card jood-info-bg">
            <div class="card-body">
                <div class="d-flex align-items-center">
                    <div class="flex-grow-1">
                        <div class="widget-value stat-average-price">0€</div>
                        <div class="widget-label">Prix moyen</div>
                    </div>
                    <div class="flex-shrink-0">
                        <i class="fas fa-euro-sign fa-2x opacity-75"></i>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Filters -->
<div class="card mb-4">
    <div class="card-body">
        <div class="row g-3">
            <div class="col-md-3">
                <select class="form-select" id="categoryFilter">
                    <option value="">Toutes les catégories</option>
                    <option value="entrees">Entrées</option>
                    <option value="plats">Plats principaux</option>
                    <option value="desserts">Desserts</option>
                    <option value="boissons">Boissons</option>
                </select>
            </div>
            <div class="col-md-3">
                <select class="form-select" id="statusFilter">
                    <option value="">Tous les statuts</option>
                    <option value="available">Disponible</option>
                    <option value="unavailable">Indisponible</option>
                    <option value="out_of_stock">En rupture</option>
                </select>
            </div>
            <div class="col-md-4">
                <input type="text" class="form-control" placeholder="Rechercher un plat..." id="searchInput">
            </div>
            <div class="col-md-2">
                <button class="btn btn-outline-secondary w-100" id="clearFilters">
                    <i class="fas fa-times"></i> Effacer
                </button>
            </div>
        </div>
    </div>
</div>

<!-- Dishes Grid -->
<div id="dishesContainer">
    <!-- Loading state -->
    <div class="text-center p-4 text-muted">
        <i class="fas fa-spinner fa-spin"></i> Chargement des plats...
    </div>
        <!-- Dish Card 1 -->
        <div class="col-lg-4 col-md-6 dish-card" data-category="plats" data-status="available">
            <div class="card h-100">
                <div class="position-relative">
                    <img src="https://via.placeholder.com/300x200/a9b73e/ffffff?text=Couscous+Royal" 
                         class="card-img-top" alt="Couscous Royal" style="height: 200px; object-fit: cover;">
                    <div class="position-absolute top-0 end-0 m-2">
                        <span class="badge jood-primary-bg">Bestseller</span>
                    </div>
                    <div class="position-absolute top-0 start-0 m-2">
                        <span class="badge bg-success">Disponible</span>
                    </div>
                </div>
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-start mb-2">
                        <h5 class="card-title mb-0">Couscous Royal</h5>
                        <span class="fw-bold jood-primary fs-5">16.90€</span>
                    </div>
                    <p class="card-text text-muted small mb-3">
                        Couscous traditionnel aux légumes avec agneau, merguez et poulet, accompagné de bouillon parfumé.
                    </p>
                    <div class="d-flex justify-content-between align-items-center mb-2">
                        <small class="text-muted">
                            <i class="fas fa-star text-warning"></i> 4.8 (23 avis)
                        </small>
                        <small class="text-muted">
                            <i class="fas fa-shopping-cart"></i> 45 commandes
                        </small>
                    </div>
                    <div class="d-flex justify-content-between align-items-center">
                        <span class="badge bg-secondary">Plats principaux</span>
                        <div class="btn-group btn-group-sm">
                            <button class="btn btn-outline-primary" title="Modifier">
                                <i class="fas fa-edit"></i>
                            </button>
                            <button class="btn btn-outline-success" title="Dupliquer">
                                <i class="fas fa-copy"></i>
                            </button>
                            <button class="btn btn-outline-danger" title="Supprimer">
                                <i class="fas fa-trash"></i>
                            </button>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Dish Card 2 -->
        <div class="col-lg-4 col-md-6 dish-card" data-category="plats" data-status="available">
            <div class="card h-100">
                <div class="position-relative">
                    <img src="https://via.placeholder.com/300x200/202d5b/ffffff?text=Tajine+Agneau" 
                         class="card-img-top" alt="Tajine Agneau" style="height: 200px; object-fit: cover;">
                    <div class="position-absolute top-0 start-0 m-2">
                        <span class="badge bg-success">Disponible</span>
                    </div>
                </div>
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-start mb-2">
                        <h5 class="card-title mb-0">Tajine Agneau aux Pruneaux</h5>
                        <span class="fw-bold jood-primary fs-5">18.50€</span>
                    </div>
                    <p class="card-text text-muted small mb-3">
                        Agneau fondant mijoté aux pruneaux, amandes et épices marocaines, servi avec du pain traditionnel.
                    </p>
                    <div class="d-flex justify-content-between align-items-center mb-2">
                        <small class="text-muted">
                            <i class="fas fa-star text-warning"></i> 4.6 (18 avis)
                        </small>
                        <small class="text-muted">
                            <i class="fas fa-shopping-cart"></i> 32 commandes
                        </small>
                    </div>
                    <div class="d-flex justify-content-between align-items-center">
                        <span class="badge bg-secondary">Plats principaux</span>
                        <div class="btn-group btn-group-sm">
                            <button class="btn btn-outline-primary" title="Modifier">
                                <i class="fas fa-edit"></i>
                            </button>
                            <button class="btn btn-outline-success" title="Dupliquer">
                                <i class="fas fa-copy"></i>
                            </button>
                            <button class="btn btn-outline-danger" title="Supprimer">
                                <i class="fas fa-trash"></i>
                            </button>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Dish Card 3 -->
        <div class="col-lg-4 col-md-6 dish-card" data-category="entrees" data-status="available">
            <div class="card h-100">
                <div class="position-relative">
                    <img src="https://via.placeholder.com/300x200/da3c33/ffffff?text=Pastilla+Poulet" 
                         class="card-img-top" alt="Pastilla Poulet" style="height: 200px; object-fit: cover;">
                    <div class="position-absolute top-0 end-0 m-2">
                        <span class="badge jood-secondary-bg">Spécialité</span>
                    </div>
                    <div class="position-absolute top-0 start-0 m-2">
                        <span class="badge bg-success">Disponible</span>
                    </div>
                </div>
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-start mb-2">
                        <h5 class="card-title mb-0">Pastilla au Poulet</h5>
                        <span class="fw-bold jood-primary fs-5">12.90€</span>
                    </div>
                    <p class="card-text text-muted small mb-3">
                        Feuilleté croustillant farci au poulet, amandes, œufs et épices, saupoudré de cannelle et sucre glace.
                    </p>
                    <div class="d-flex justify-content-between align-items-center mb-2">
                        <small class="text-muted">
                            <i class="fas fa-star text-warning"></i> 4.9 (31 avis)
                        </small>
                        <small class="text-muted">
                            <i class="fas fa-shopping-cart"></i> 28 commandes
                        </small>
                    </div>
                    <div class="d-flex justify-content-between align-items-center">
                        <span class="badge bg-primary">Entrées</span>
                        <div class="btn-group btn-group-sm">
                            <button class="btn btn-outline-primary" title="Modifier">
                                <i class="fas fa-edit"></i>
                            </button>
                            <button class="btn btn-outline-success" title="Dupliquer">
                                <i class="fas fa-copy"></i>
                            </button>
                            <button class="btn btn-outline-danger" title="Supprimer">
                                <i class="fas fa-trash"></i>
                            </button>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Dish Card 4 - Out of Stock -->
        <div class="col-lg-4 col-md-6 dish-card" data-category="desserts" data-status="out_of_stock">
            <div class="card h-100">
                <div class="position-relative">
                    <img src="https://via.placeholder.com/300x200/c0c4ba/666666?text=Baklawa" 
                         class="card-img-top" alt="Baklawa" style="height: 200px; object-fit: cover; filter: grayscale(50%);">
                    <div class="position-absolute top-0 start-0 m-2">
                        <span class="badge bg-danger">En rupture</span>
                    </div>
                </div>
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-start mb-2">
                        <h5 class="card-title mb-0 text-muted">Baklawa</h5>
                        <span class="fw-bold text-muted fs-5">8.50€</span>
                    </div>
                    <p class="card-text text-muted small mb-3">
                        Pâtisserie orientale aux amandes et miel, feuilletée et délicatement parfumée à l'eau de fleur d'oranger.
                    </p>
                    <div class="d-flex justify-content-between align-items-center mb-2">
                        <small class="text-muted">
                            <i class="fas fa-star text-warning"></i> 4.7 (15 avis)
                        </small>
                        <small class="text-muted">
                            <i class="fas fa-shopping-cart"></i> 12 commandes
                        </small>
                    </div>
                    <div class="d-flex justify-content-between align-items-center">
                        <span class="badge bg-warning">Desserts</span>
                        <div class="btn-group btn-group-sm">
                            <button class="btn btn-outline-primary" title="Modifier">
                                <i class="fas fa-edit"></i>
                            </button>
                            <button class="btn btn-outline-success" title="Dupliquer">
                                <i class="fas fa-copy"></i>
                            </button>
                            <button class="btn btn-outline-danger" title="Supprimer">
                                <i class="fas fa-trash"></i>
                            </button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- List View (Hidden by default) -->
    <div id="listView" class="d-none">
        <div class="card">
            <div class="card-body p-0">
                <div class="table-responsive">
                    <table class="table table-hover mb-0">
                        <thead class="table-light">
                            <tr>
                                <th>Plat</th>
                                <th>Catégorie</th>
                                <th>Prix</th>
                                <th>Statut</th>
                                <th>Commandes</th>
                                <th>Note</th>
                                <th>Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            <tr>
                                <td>
                                    <div class="d-flex align-items-center">
                                        <img src="https://via.placeholder.com/50x50/a9b73e/ffffff?text=CR" 
                                             class="rounded me-3" alt="Couscous Royal">
                                        <div>
                                            <div class="fw-semibold">Couscous Royal</div>
                                            <small class="text-muted">Plat traditionnel</small>
                                        </div>
                                    </div>
                                </td>
                                <td><span class="badge bg-secondary">Plats principaux</span></td>
                                <td><span class="fw-bold jood-primary">16.90€</span></td>
                                <td><span class="badge bg-success">Disponible</span></td>
                                <td>45</td>
                                <td>
                                    <i class="fas fa-star text-warning"></i> 4.8
                                </td>
                                <td>
                                    <div class="btn-group btn-group-sm">
                                        <button class="btn btn-outline-primary" title="Modifier">
                                            <i class="fas fa-edit"></i>
                                        </button>
                                        <button class="btn btn-outline-success" title="Dupliquer">
                                            <i class="fas fa-copy"></i>
                                        </button>
                                        <button class="btn btn-outline-danger" title="Supprimer">
                                            <i class="fas fa-trash"></i>
                                        </button>
                                    </div>
                                </td>
                            </tr>
                            <!-- More rows would be here -->
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Add Dish Modal -->
<div class="modal fade" id="addDishModal" tabindex="-1">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header jood-primary-bg">
                <h5 class="modal-title text-white">
                    <i class="fas fa-plus"></i> Nouveau Plat
                </h5>
                <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body">
                <form id="dishForm">
                    <div class="row g-3">
                        <div class="col-md-8">
                            <label class="form-label">Nom du plat *</label>
                            <input type="text" class="form-control" name="nom" placeholder="Ex: Couscous Royal" required>
                        </div>
                        <div class="col-md-4">
                            <label class="form-label">Prix (€) *</label>
                            <input type="number" class="form-control" name="prix" step="0.10" placeholder="16.90" required>
                        </div>
                        <div class="col-12">
                            <label class="form-label">Description</label>
                            <textarea class="form-control" name="description" rows="3" placeholder="Description du plat..."></textarea>
                        </div>
                        <div class="col-md-6">
                            <label class="form-label">Catégorie</label>
                            <select class="form-select" name="categoryId">
                                <option value="">Sélectionner...</option>
                                <!-- Options will be populated by DishManager -->
                            </select>
                        </div>
                        <div class="col-md-6">
                            <label class="form-label">Temps de préparation (min)</label>
                            <input type="number" class="form-control" name="tempsPreparation" placeholder="30">
                        </div>
                        <div class="col-md-6">
                            <label class="form-label">Allergènes</label>
                            <input type="text" class="form-control" name="allergenes" placeholder="Gluten, Lactose...">
                        </div>
                        <div class="col-md-6">
                            <label class="form-label">Ingrédients principaux</label>
                            <input type="text" class="form-control" name="ingredients" placeholder="Agneau, Légumes...">
                        </div>
                        <div class="col-12">
                            <label class="form-label">Image du plat</label>
                            <input type="file" class="form-control" name="image" accept="image/*">
                        </div>
                        <div class="col-12">
                            <div class="row">
                                <div class="col-md-4">
                                    <div class="form-check">
                                        <input class="form-check-input" type="checkbox" name="disponible" id="dishAvailable" checked>
                                        <label class="form-check-label" for="dishAvailable">
                                            <i class="fas fa-check-circle text-success"></i> Disponible
                                        </label>
                                    </div>
                                </div>
                                <div class="col-md-4">
                                    <div class="form-check">
                                        <input class="form-check-input" type="checkbox" name="populaire" id="dishPopular">
                                        <label class="form-check-label" for="dishPopular">
                                            <i class="fas fa-star text-warning"></i> Populaire
                                        </label>
                                    </div>
                                </div>
                                <div class="col-md-4">
                                    <div class="form-check">
                                        <input class="form-check-input" type="checkbox" name="vegetarien" id="dishVegetarian">
                                        <label class="form-check-label" for="dishVegetarian">
                                            <i class="fas fa-leaf text-success"></i> Végétarien
                                        </label>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">
                    <i class="fas fa-times"></i> Annuler
                </button>
                <button type="button" class="btn btn-primary" id="saveDishBtn">
                    <i class="fas fa-save"></i> Enregistrer
                </button>
            </div>
        </div>
    </div>
</div>
{% endblock %}

{% block javascripts %}
<!-- Menu API -->
<script src="{{ asset('js/admin/managers/menu-api.js') }}"></script>
<!-- Dish Manager -->
<script src="{{ asset('js/admin/managers/dish-manager.js') }}"></script>

<style>
/* Dish card enhancements */
.dish-card {
    transition: all 0.3s ease;
}

.dish-card:hover {
    transform: translateY(-5px);
    box-shadow: 0 8px 25px rgba(0,0,0,0.1);
}

/* View toggle buttons */
.btn-group .btn.active {
    background-color: var(--jood-primary);
    border-color: var(--jood-primary);
    color: white;
}

/* Filter enhancements */
.form-select:focus,
.form-control:focus {
    border-color: var(--jood-primary);
    box-shadow: 0 0 0 0.2rem rgba(169, 183, 62, 0.25);
}

/* Loading state */
.loading-spinner {
    display: inline-block;
    width: 1rem;
    height: 1rem;
    border: 2px solid transparent;
    border-top: 2px solid currentColor;
    border-radius: 50%;
    animation: spin 1s linear infinite;
}

@keyframes spin {
    0% { transform: rotate(0deg); }
    100% { transform: rotate(360deg); }
}

/* Form enhancements */
.form-check-label {
    cursor: pointer;
}

.form-check-input:checked {
    background-color: var(--jood-primary);
    border-color: var(--jood-primary);
}

/* Badge styles */
.badge.jood-primary-bg {
    background-color: var(--jood-primary) !important;
}

.badge.jood-warning-bg {
    background-color: #f39c12 !important;
}

/* Card hover effects */
.card {
    transition: all 0.3s ease;
    border: 1px solid rgba(0,0,0,0.125);
}

.card:hover {
    border-color: var(--jood-primary);
    box-shadow: 0 4px 12px rgba(169, 183, 62, 0.15);
}

/* List view enhancements */
.table-hover tbody tr:hover {
    background-color: rgba(169, 183, 62, 0.05);
}

.table th {
    border-top: none;
    background-color: var(--jood-primary);
    color: white;
    font-weight: 600;
}
</style>
{% endblock %} 