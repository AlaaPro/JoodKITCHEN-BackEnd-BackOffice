<script>
document.addEventListener('DOMContentLoaded', function() {
    // Drag and drop functionality for categories
    const categoryItems = document.querySelectorAll('.category-item');
    categoryItems.forEach(item => {
        item.draggable = true;
        
        item.addEventListener('dragstart', function(e) {
            e.dataTransfer.setData('text/plain', this.dataset.category);
            this.style.opacity = '0.5';
        });
        
        item.addEventListener('dragend', function() {
            this.style.opacity = '1';
        });
        
        item.addEventListener('dragover', function(e) {
            e.preventDefault();
            this.style.borderColor = '#a9b73e';
        });
        
        item.addEventListener('dragleave', function() {
            this.style.borderColor = '';
        });
        
        item.addEventListener('drop', function(e) {
            e.preventDefault();
            const draggedCategory = e.dataTransfer.getData('text/plain');
            console.log('Moved', draggedCategory, 'to position of', this.dataset.category);
            this.style.borderColor = '';
            // Here you would update the category order
        });
    });
    
    // Category creation form
    document.querySelector('#addCategoryModal .btn-primary').addEventListener('click', function() {
        const form = document.getElementById('addCategoryForm');
        const formData = new FormData(form);
        
        // Show loading state
        this.innerHTML = '<i class="fas fa-spinner fa-spin"></i> Cr√©ation...';
        this.disabled = true;
        
        // Simulate category creation
        setTimeout(() => {
            this.innerHTML = '<i class="fas fa-check"></i> Cat√©gorie cr√©√©e!';
            setTimeout(() => {
                bootstrap.Modal.getInstance(document.getElementById('addCategoryModal')).hide();
                this.innerHTML = '<i class="fas fa-save"></i> Cr√©er la cat√©gorie';
                this.disabled = false;
                form.reset();
                
                // Show success notification
                showNotification('Cat√©gorie cr√©√©e avec succ√®s!', 'success');
            }, 1500);
        }, 2000);
    });
    
    function showNotification(message, type) {
        const toast = document.createElement('div');
        toast.className = `alert alert-${type} position-fixed`;
        toast.style.cssText = 'top: 20px; right: 20px; z-index: 9999; min-width: 300px;';
        toast.innerHTML = `
            <div class="d-flex align-items-center">
                <i class="fas fa-check-circle me-2"></i>
                ${message}
                <button type="button" class="btn-close ms-auto" onclick="this.parentElement.parentElement.remove()"></button>
            </div>
        `;
        document.body.appendChild(toast);
        
        setTimeout(() => {
            if (toast.parentElement) {
                toast.remove();
            }
        }, 5000);
    }
});
</script>
