// Modal compatibility layer for Bootstrap/CoreUI conflicts with fullscreen support
function closeModalSafely(modalId) {
    console.log('üîí Attempting to close modal:', modalId);
    
    const modalElement = document.getElementById(modalId);
    if (!modalElement) {
        console.warn('‚ö†Ô∏è Modal element not found:', modalId);
        return;
    }
    
    try {
        // Try CoreUI API first
        if (typeof coreui !== 'undefined' && coreui.Modal) {
            const modal = coreui.Modal.getInstance(modalElement) || new coreui.Modal(modalElement);
            modal.hide();
            console.log('‚úÖ Modal closed using CoreUI API');
            return;
        }
        
        // Try Bootstrap API
        if (typeof bootstrap !== 'undefined' && bootstrap.Modal) {
            const modal = bootstrap.Modal.getInstance(modalElement) || new bootstrap.Modal(modalElement);
            modal.hide();
            console.log('‚úÖ Modal closed using Bootstrap API');
            return;
        }
        
        // Fallback: manipulate DOM directly
        modalElement.classList.remove('show');
        modalElement.style.display = 'none';
        modalElement.setAttribute('aria-hidden', 'true');
        modalElement.removeAttribute('aria-modal');
        
        // Remove backdrop if exists
        const backdrop = document.querySelector('.modal-backdrop');
        if (backdrop) {
            backdrop.remove();
        }
        
        // Handle body classes based on mode
        document.body.classList.remove('modal-open');
        if (!document.body.classList.contains('pos-fullscreen')) {
            document.body.style.removeProperty('padding-right');
        }
        
        console.log('‚úÖ Modal closed using DOM fallback');
        
    } catch (error) {
        console.error('‚ùå Error closing modal:', error);
    }
}

