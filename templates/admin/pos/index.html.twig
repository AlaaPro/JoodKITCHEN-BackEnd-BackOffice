// POS Fullscreen Toggle Functionality
function initializePosFullscreenToggle() {
    console.log('üñ•Ô∏è Initializing POS fullscreen toggle...');
    
    const toggleBtn = document.getElementById('btnToggleFullscreen');
    const toggleIcon = toggleBtn.querySelector('i');
    const toggleText = document.getElementById('fullscreenText');
    
    let isFullscreen = false;
    
    // Check for saved fullscreen preference
    const savedFullscreen = localStorage.getItem('pos_fullscreen_mode');
    if (savedFullscreen === 'true') {
        toggleFullscreen();
    }
    
    toggleBtn.addEventListener('click', toggleFullscreen);
    
    // Add keyboard shortcut (F11 or Ctrl+Shift+F)
    document.addEventListener('keydown', function(e) {
        if (e.key === 'F11' || (e.ctrlKey && e.shiftKey && e.key === 'F')) {
            e.preventDefault();
            toggleFullscreen();
        }
    });
    
    function toggleFullscreen() {
        isFullscreen = !isFullscreen;
        
        if (isFullscreen) {
            enterFullscreen();
        } else {
            exitFullscreen();
        }
        
        // Save preference
        localStorage.setItem('pos_fullscreen_mode', isFullscreen.toString());
        
        console.log('üñ•Ô∏è POS fullscreen mode:', isFullscreen ? 'ON' : 'OFF');
    }
    
    function enterFullscreen() {
        // Add fullscreen class to body
        document.body.classList.add('pos-fullscreen');
        
        // Force scroll to top to ensure proper positioning
        window.scrollTo(0, 0);
        
        // Disable body scroll
        document.body.style.overflow = 'hidden';
        
        // Update button appearance
        toggleIcon.className = 'fas fa-compress';
        toggleText.textContent = 'Quitter';
        toggleBtn.title = 'Quitter le mode plein √©cran (F11)';
        
