{% extends 'admin/base.html.twig' %}

{% block title %}Point de Vente (POS) - JoodKitchen{% endblock %}

{% block stylesheets %}
{{ parent() }}
<style>
/* ================================
   JOODKITCHEN POS PROFESSIONAL STYLES
   ================================ */

/* POS Layout Structure */
.pos-container {
    height: calc(100vh - 140px);
    overflow: hidden;
    background: linear-gradient(135deg, #f8f9fa 0%, #e9ecef 100%);
    width: 100%;
    margin: 0;
}

/* Ensure full width usage in normal mode too */
.container-lg.px-4 {
    width: 100% !important;
    max-width: 100% !important;
}

.body {
    padding: 0 !important;
}

.pos-header {
    background: linear-gradient(135deg, #a9b73e 0%, #8b9332 100%);
    color: white;
    padding: 1rem;
    border-radius: 8px 8px 0 0;
    box-shadow: 0 2px 10px rgba(169, 183, 62, 0.3);
}

.pos-header h4 {
    margin: 0;
    font-weight: 700;
    text-shadow: 1px 1px 2px rgba(0,0,0,0.3);
}

.pos-stats {
    display: flex;
    gap: 1rem;
    margin-top: 0.5rem;
}

.pos-stat-card {
    background: rgba(255, 255, 255, 0.2);
    padding: 0.5rem 1rem;
    border-radius: 6px;
    text-align: center;
    backdrop-filter: blur(10px);
}

.pos-stat-value {
    font-size: 1.2rem;
    font-weight: 700;
    display: block;
}

.pos-stat-label {
    font-size: 0.8rem;
    opacity: 0.9;
}

/* Main POS Grid */
.pos-main {
    display: grid;
    grid-template-columns: 1fr 400px;
    gap: 1rem;
    height: calc(100% - 80px);
    padding: 1rem;
}

/* Left Panel - Menu Categories & Items */
.pos-menu-panel {
    background: white;
    border-radius: 12px;
    box-shadow: 0 4px 20px rgba(0,0,0,0.1);
    overflow: hidden;
    display: flex;
    flex-direction: column;
}

.pos-category-tabs {
    display: flex;
    background: #f8f9fa;
    border-bottom: 2px solid #e9ecef;
    overflow-x: auto;
    scrollbar-width: none;
    -ms-overflow-style: none;
}

.pos-category-tabs::-webkit-scrollbar {
    display: none;
}

.pos-category-tab {
    flex: 0 0 auto;
    padding: 1rem 1.5rem;
    background: transparent;
    border: none;
    font-weight: 600;
    color: #6c757d;
    cursor: pointer;
    transition: all 0.3s ease;
    position: relative;
    white-space: nowrap;
    display: flex;
    align-items: center;
    gap: 0.5rem;
}

.pos-category-tab:hover {
    background: rgba(169, 183, 62, 0.1);
    color: #a9b73e;
}

.pos-category-tab.active {
    background: #a9b73e;
    color: white;
}

.pos-category-tab.active::after {
    content: '';
    position: absolute;
    bottom: -2px;
    left: 0;
    right: 0;
    height: 3px;
    background: #a9b73e;
}

.pos-category-icon {
    font-size: 1.2rem;
}

.pos-items-container {
    flex: 1;
    padding: 1rem;
    overflow-y: auto;
}

/* Advanced Filters */
.pos-advanced-filters {
    background: #f8f9fa;
    border-bottom: 1px solid #e9ecef;
    padding: 1rem;
}

.pos-filters-content {
    max-width: 100%;
}

.form-select-sm, .form-control-sm {
    font-size: 0.8rem;
}

.form-check-sm {
    font-size: 0.85rem;
}

.form-check-sm .form-check-input {
    margin-top: 0.2rem;
}

.pos-items-grid {
    display: grid;
    grid-template-columns: repeat(auto-fill, minmax(200px, 1fr));
    gap: 1rem;
}

/* Item Cards */
.pos-item-card {
    background: white;
    border: 2px solid #e9ecef;
    border-radius: 12px;
    padding: 1rem;
    cursor: pointer;
    transition: all 0.3s ease;
    position: relative;
    overflow: hidden;
}

.pos-item-card:hover {
    border-color: #a9b73e;
    transform: translateY(-2px);
    box-shadow: 0 8px 25px rgba(169, 183, 62, 0.15);
}

.pos-item-card.unavailable {
    opacity: 0.5;
    cursor: not-allowed;
    background: #f8f9fa;
}

.pos-item-image {
    width: 100%;
    height: 120px;
    background-size: cover;
    background-position: center;
    border-radius: 8px;
    margin-bottom: 0.75rem;
    background-color: #f8f9fa;
    display: flex;
    align-items: center;
    justify-content: center;
    font-size: 2rem;
    color: #6c757d;
}

.pos-item-name {
    font-weight: 700;
    font-size: 1rem;
    color: #212529;
    margin-bottom: 0.5rem;
    line-height: 1.2;
}

.pos-item-description {
    font-size: 0.85rem;
    color: #6c757d;
    margin-bottom: 0.75rem;
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
    overflow: hidden;
}

.pos-item-price {
    font-size: 1.25rem;
    font-weight: 700;
    color: #a9b73e;
    text-align: center;
}

.pos-item-badges {
    position: absolute;
    top: 0.5rem;
    right: 0.5rem;
    display: flex;
    flex-direction: column;
    gap: 0.25rem;
}

.pos-item-badge {
    padding: 0.25rem 0.5rem;
    border-radius: 12px;
    font-size: 0.7rem;
    font-weight: 600;
    text-align: center;
}

.pos-badge-popular {
    background: linear-gradient(45deg, #da3c33, #ff6b6b);
    color: white;
}

.pos-badge-vegetarian {
    background: linear-gradient(45deg, #28a745, #20c997);
    color: white;
}

.pos-badge-new {
    background: linear-gradient(45deg, #007bff, #00d4ff);
    color: white;
}

/* Right Panel - Order Summary */
.pos-order-panel {
    background: white;
    border-radius: 12px;
    box-shadow: 0 4px 20px rgba(0,0,0,0.1);
    display: flex;
    flex-direction: column;
    overflow: auto;
}

.pos-order-header {
    background: linear-gradient(135deg, #da3c33 0%, #c82333 100%);
    color: white;
    padding: 1rem;
    text-align: center;
}

.pos-order-title {
    font-size: 1.25rem;
    font-weight: 700;
    margin: 0;
}

.pos-customer-section {
    padding: 1rem;
    border-bottom: 2px solid #e9ecef;
}

.pos-customer-selector {
    display: flex;
    gap: 0.5rem;
    margin-bottom: 1rem;
}

.pos-customer-input {
    flex: 1;
    padding: 0.75rem;
    border: 2px solid #e9ecef;
    border-radius: 8px;
    font-size: 0.9rem;
}

.pos-customer-input:focus {
    border-color: #a9b73e;
    outline: none;
}

.pos-btn-customer {
    padding: 0.75rem 1rem;
    background: #a9b73e;
    color: white;
    border: none;
    border-radius: 8px;
    font-weight: 600;
    cursor: pointer;
    transition: all 0.3s ease;
}

.pos-btn-customer:hover {
    background: #8b9332;
}

.pos-customer-info {
    background: #f8f9fa;
    padding: 0.75rem;
    border-radius: 8px;
    font-size: 0.9rem;
    display: none;
}

.pos-customer-info.active {
    display: block;
}

.pos-order-type {
    display: flex;
    gap: 0.5rem;
    margin-top: 1rem;
}

.pos-order-type-btn {
    flex: 1;
    padding: 0.5rem;
    background: #f8f9fa;
    border: 2px solid #e9ecef;
    border-radius: 6px;
    font-size: 0.8rem;
    font-weight: 600;
    cursor: pointer;
    transition: all 0.3s ease;
    text-align: center;
}

.pos-order-type-btn.active {
    background: #a9b73e;
    color: white;
    border-color: #a9b73e;
}

/* Order Items */
.pos-order-items {
    flex: 1;
    padding: 1rem;
    overflow-y: auto;
    min-height: 200px; /* Ensure minimum height so it's always visible */
}

.pos-order-empty {
    text-align: center;
    color: #6c757d;
    font-style: italic;
    padding: 2rem;
}

.pos-order-item {
    display: flex;
    align-items: center;
    padding: 0.75rem 0;
    border-bottom: 1px solid #e9ecef;
    gap: 0.75rem;
}

.pos-order-item:last-child {
    border-bottom: none;
}

.pos-item-details {
    flex: 1;
}

.pos-item-order-name {
    font-weight: 600;
    font-size: 0.9rem;
    color: #212529;
    margin-bottom: 0.25rem;
}

.pos-item-order-price {
    font-size: 0.8rem;
    color: #6c757d;
}

.pos-quantity-controls {
    display: flex;
    align-items: center;
    gap: 0.5rem;
}

.pos-qty-btn {
    width: 30px;
    height: 30px;
    border: none;
    border-radius: 50%;
    background: #a9b73e;
    color: white;
    font-weight: 700;
    cursor: pointer;
    transition: all 0.3s ease;
    display: flex;
    align-items: center;
    justify-content: center;
}

.pos-qty-btn:hover {
    background: #8b9332;
    transform: scale(1.1);
}

.pos-qty-btn.remove {
    background: #da3c33;
}

.pos-qty-btn.remove:hover {
    background: #c82333;
}

.pos-qty-display {
    font-weight: 700;
    min-width: 20px;
    text-align: center;
}

.pos-item-total {
    font-weight: 700;
    color: #a9b73e;
    font-size: 0.9rem;
}

/* Order Summary & Payment */
.pos-order-summary {
    padding: 1rem;
    border-top: 2px solid #e9ecef;
    background: #f8f9fa;
}

.pos-summary-row {
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding: 0.5rem 0;
    font-size: 0.9rem;
}

.pos-summary-row.total {
    border-top: 2px solid #e9ecef;
    margin-top: 0.5rem;
    padding-top: 1rem;
    font-size: 1.1rem;
    font-weight: 700;
    color: #a9b73e;
}

.pos-payment-section {
    padding: 1rem;
    background: white;
}

.pos-payment-methods {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 0.5rem;
    margin-bottom: 1rem;
}

.pos-payment-btn {
    padding: 0.75rem;
    border: 2px solid #e9ecef;
    border-radius: 8px;
    background: white;
    cursor: pointer;
    transition: all 0.3s ease;
    text-align: center;
    font-weight: 600;
    font-size: 0.9rem;
}

.pos-payment-btn:hover {
    border-color: #a9b73e;
    background: rgba(169, 183, 62, 0.1);
}

.pos-payment-btn.active {
    background: #a9b73e;
    color: white;
    border-color: #a9b73e;
}

.pos-finalize-order {
    width: 100%;
    padding: 1rem;
    background: linear-gradient(135deg, #28a745 0%, #20c997 100%);
    color: white;
    border: none;
    border-radius: 8px;
    font-size: 1.1rem;
    font-weight: 700;
    cursor: pointer;
    transition: all 0.3s ease;
    box-shadow: 0 4px 15px rgba(40, 167, 69, 0.3);
}

.pos-finalize-order:hover {
    transform: translateY(-2px);
    box-shadow: 0 6px 20px rgba(40, 167, 69, 0.4);
}

.pos-finalize-order:disabled {
    background: #6c757d;
    cursor: not-allowed;
    transform: none;
    box-shadow: none;
}

/* Loading & States */
.pos-loading {
    display: flex;
    align-items: center;
    justify-content: center;
    padding: 2rem;
    color: #6c757d;
    font-style: italic;
}

.pos-spinner {
    width: 30px;
    height: 30px;
    border: 3px solid #e9ecef;
    border-top: 3px solid #a9b73e;
    border-radius: 50%;
    animation: spin 1s linear infinite;
    margin-right: 1rem;
}

@keyframes spin {
    0% { transform: rotate(0deg); }
    100% { transform: rotate(360deg); }
}

/* Responsive Design */
@media (max-width: 1200px) {
    .pos-main {
        grid-template-columns: 1fr 350px;
    }
    
    .pos-items-grid {
        grid-template-columns: repeat(auto-fill, minmax(180px, 1fr));
    }
}

@media (max-width: 992px) {
    .pos-main {
        grid-template-columns: 1fr;
        grid-template-rows: 1fr 400px;
    }
    
    .pos-order-panel {
        order: 2;
    }
    
    .pos-items-grid {
        grid-template-columns: repeat(auto-fill, minmax(150px, 1fr));
    }
}

@media (max-width: 768px) {
    .pos-container {
        height: calc(100vh - 120px);
    }
    
    .pos-header {
        padding: 0.75rem;
    }
    
    .pos-stats {
        flex-direction: column;
        gap: 0.5rem;
    }
    
    .pos-stat-card {
        display: flex;
        justify-content: space-between;
        align-items: center;
        text-align: left;
    }
    
    .pos-main {
        padding: 0.5rem;
    }
    
    .pos-items-grid {
        grid-template-columns: repeat(auto-fill, minmax(140px, 1fr));
        gap: 0.75rem;
    }
    
    .pos-item-card {
        padding: 0.75rem;
    }
    
    .pos-item-image {
        height: 80px;
        font-size: 1.5rem;
    }
    
    .pos-category-tab {
        padding: 0.75rem 1rem;
        font-size: 0.9rem;
    }
}

/* Touch-friendly adjustments for tablets */
@media (pointer: coarse) {
    .pos-item-card {
        padding: 1.25rem;
    }
    
    .pos-category-tab {
        padding: 1.25rem 1.5rem;
    }
    
    .pos-qty-btn {
        width: 40px;
        height: 40px;
    }
    
    .pos-payment-btn {
        padding: 1rem;
    }
}

/* Animation Classes */
.pos-fadeIn {
    animation: fadeIn 0.3s ease-in-out;
}

@keyframes fadeIn {
    from { opacity: 0; transform: translateY(10px); }
    to { opacity: 1; transform: translateY(0); }
}

.pos-slideIn {
    animation: slideIn 0.3s ease-out;
}

@keyframes slideIn {
    from { transform: translateX(20px); opacity: 0; }
    to { transform: translateX(0); opacity: 1; }
}

/* Success/Error Messages */
.pos-message {
    position: fixed;
    top: 20px;
    right: 20px;
    padding: 1rem 1.5rem;
    border-radius: 8px;
    font-weight: 600;
    z-index: 9999;
    max-width: 400px;
    box-shadow: 0 4px 20px rgba(0,0,0,0.15);
    animation: slideInRight 0.3s ease-out;
}

.pos-message.success {
    background: linear-gradient(135deg, #28a745, #20c997);
    color: white;
}

.pos-message.error {
    background: linear-gradient(135deg, #da3c33, #ff6b6b);
    color: white;
}

@keyframes slideInRight {
    from { transform: translateX(100%); }
    to { transform: translateX(0); }
}

/* ================================
   MODAL FIXES FOR BOOTSTRAP/COREUI CONFLICTS
   ================================ */

/* Ensure modals appear above everything */
.modal {
    z-index: 1060 !important;
}

.modal-backdrop {
    z-index: 1055 !important;
}

/* Special modal handling for fullscreen mode */
body.pos-fullscreen .modal {
    z-index: 100000 !important; /* Higher than fullscreen body */
    position: fixed !important;
}

body.pos-fullscreen .modal-backdrop {
    z-index: 999 !important; /* Above fullscreen content but below modal */
    position: fixed !important;
    top: 0 !important;
    left: 0 !important;
    width: 100vw !important;
    height: 100vh !important;
    background-color: rgba(0, 0, 0, 0.5) !important; /* Standard backdrop opacity */
}

/* Ensure modal dialogs are properly centered in fullscreen */
body.pos-fullscreen .modal-dialog {
    position: relative !important;
    z-index: 100001 !important;
    margin: 1rem auto !important;
    max-height: calc(100vh - 2rem) !important;
}

/* Ensure modal content scrolls properly in fullscreen */
body.pos-fullscreen .modal-content {
    max-height: calc(100vh - 2rem) !important;
    overflow-y: auto !important;
    border: none !important;
    box-shadow: 0 10px 40px rgba(0,0,0,0.3) !important;
}

/* Fix modal body scrolling in fullscreen */
body.pos-fullscreen .modal-body {
    max-height: 60vh !important;
    overflow-y: auto !important;
}

/* Fix for close button visibility */
.btn-close {
    background: transparent !important;
    border: none !important;
    font-size: 1.5rem !important;
    line-height: 1 !important;
    color: #000 !important;
    opacity: 0.5 !important;
    cursor: pointer !important;
    padding: 0.25rem !important;
    margin: -0.25rem !important;
}

.btn-close:hover {
    opacity: 0.75 !important;
}

.btn-close-white {
    color: #fff !important;
}

/* Ensure modal headers have proper styling */
.modal-header {
    display: flex !important;
    justify-content: space-between !important;
    align-items: center !important;
    padding: 1rem !important;
    border-bottom: 1px solid #dee2e6 !important;
}

.modal-title {
    margin: 0 !important;
    line-height: 1.5 !important;
}

/* Fix modal backdrop behavior */
.modal.show {
    display: block !important;
}

.modal-backdrop.show {
    opacity: 0.5 !important;
}

/* Prevent scroll issues */
body.modal-open {
    overflow: hidden !important;
}

/* Fix for static backdrop behavior */
.modal[data-bs-backdrop="static"] .modal-dialog {
    transform: scale(1.02);
    transition: transform 0.3s ease;
}

.modal[data-bs-backdrop="static"]:not(.show) .modal-dialog {
    transform: scale(1);
}

/* Ensure proper modal transitions */
.modal.fade .modal-dialog {
    transition: transform 0.3s ease-out;
    transform: translate(0, -50px);
}

.modal.show .modal-dialog {
    transform: none;
}

/* Fix any potential button conflicts */
.modal .btn {
    cursor: pointer !important;
}

.modal .btn:disabled {
    cursor: not-allowed !important;
    opacity: 0.65 !important;
}

/* ================================
   FULLSCREEN POS MODE
   ================================ */

/* Fullscreen toggle button styling */
#btnToggleFullscreen {
    transition: all 0.3s ease;
}

#btnToggleFullscreen:hover {
    background: rgba(255, 255, 255, 0.2) !important;
    transform: scale(1.05);
}

/* Fullscreen mode styles */
body.pos-fullscreen #sidebar {
