        showFullscreenMessage('Mode plein √©cran activ√©. Appuyez sur F11 ou cliquez sur le bouton pour quitter.', 'success');
        
        // Trigger resize event for any responsive components
        setTimeout(() => {
            window.dispatchEvent(new Event('resize'));
            // Force a repaint
            document.body.style.display = 'none';
            document.body.offsetHeight; // Trigger reflow
            document.body.style.display = '';
        }, 300);
    }
    
    function exitFullscreen() {
        // Remove fullscreen class from body
        document.body.classList.remove('pos-fullscreen');
        
        // Restore body scroll
        document.body.style.overflow = '';
        
        // Update button appearance
        toggleIcon.className = 'fas fa-expand me-2';
        toggleText.textContent = 'Plein √©cran';
        toggleBtn.title = 'Mode plein √©cran (F11)';
        
        // Add visual feedback
        showFullscreenMessage('Mode normal restaur√©', 'success');
        
        // Trigger resize event for any responsive components
        setTimeout(() => {
            window.dispatchEvent(new Event('resize'));
            // Force a repaint
            document.body.style.display = 'none';
            document.body.offsetHeight; // Trigger reflow
            document.body.style.display = '';
        }, 300);
    }
    
    function showFullscreenMessage(message, type) {
        // Create and show a temporary message
        const messageEl = document.createElement('div');
        messageEl.className = `pos-message ${type}`;
        messageEl.innerHTML = `<i class="fas fa-info-circle me-2"></i>${message}`;
        messageEl.style.top = isFullscreen ? '80px' : '20px';
        
        document.body.appendChild(messageEl);
        
        // Auto-remove after 3 seconds
        setTimeout(() => {
            if (messageEl.parentNode) {
                messageEl.remove();
            }
        }, 3000);
    }
    
    console.log('‚úÖ POS fullscreen toggle initialized');
    console.log('üí° Shortcuts: F11 or Ctrl+Shift+F');
}

