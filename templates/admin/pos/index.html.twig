    margin: 0 !important;
}

/* Smooth transitions for all fullscreen elements */
#sidebar,
.header,
.wrapper,
.body,
.pos-container {
    transition: all 0.3s ease;
}

/* Hide breadcrumb in fullscreen */
body.pos-fullscreen .breadcrumb {
    display: none !important;
}

/* Hide footer in fullscreen */
body.pos-fullscreen .footer {
    display: none !important;
}

/* Ensure no gaps or margins in fullscreen */
body.pos-fullscreen {
    margin: 0 !important;
    padding: 0 !important;
    overflow: hidden !important;
}

body.pos-fullscreen .wrapper {
    padding: 0 !important;
    margin: 0 !important;
    height: 100vh !important;
    width: 100vw !important;
}

/* Override any CoreUI default margins/paddings */
body.pos-fullscreen * {
    box-sizing: border-box !important;
}

/* Ensure POS header uses full width */
body.pos-fullscreen .pos-header {
    width: 100% !important;
    margin: 0 !important;
    border-radius: 0 !important;
}

/* Ensure POS main content uses full dimensions */
body.pos-fullscreen .pos-main {
    width: 100% !important;
    height: calc(100vh - 80px) !important; /* Subtract header height */
    margin: 0 !important;
    padding: 0 !important;
}
</style>
{% endblock %}

{% block content %}
<div class="container-fluid">
    <!-- POS Header Simplified -->
    <div class="pos-container">
        <div class="pos-header">
            <div class="d-flex justify-content-between align-items-center">
                <div>
                    <h4>
                        <i class="fas fa-cash-register me-2"></i>
                        Point de Vente - JoodKitchen
                    </h4>
                    <small id="posCurrentTime"></small>
                </div>
                <div class="d-flex gap-2">
                    <button class="btn btn-outline-light" id="btnOrderHistory">
                        <i class="fas fa-history me-2"></i>
                        Historique du jour
                    </button>
                    <button class="btn btn-outline-light" id="btnRefreshMenu">
                        <i class="fas fa-sync-alt me-2"></i>
                        Actualiser
                    </button>
