{% extends 'admin/base.html.twig' %}

{% block title %}Commandes - JoodKitchen Admin{% endblock %}

{% block breadcrumb %}
<li class="breadcrumb-item"><a href="{{ path('admin_dashboard') }}">Accueil</a></li>
<li class="breadcrumb-item active">Commandes</li>
{% endblock %}

{% block content %}
<!-- Orders Header -->
<div class="row mb-4">
    <div class="col-12">
        <div class="d-flex justify-content-between align-items-center">
            <div>
                <h1 class="h2 mb-0 jood-dark">Gestion des Commandes</h1>
                <p class="text-muted">Suivi et gestion de toutes les commandes</p>
            </div>
            <div>
                <button class="btn btn-primary me-2">
                    <i class="fas fa-plus"></i> Nouvelle Commande
                </button>
                <button class="btn btn-outline-primary">
                    <i class="fas fa-download"></i> Export
                </button>
            </div>
        </div>
    </div>
</div>

<!-- Stats Cards -->
<div class="row g-4 mb-4">
    <div class="col-lg-2 col-md-4 col-sm-6">
        <div class="card jood-widget-card jood-warning-bg stats-pending">
            <div class="card-body">
                <div class="d-flex align-items-center">
                    <div class="flex-grow-1">
                        <div class="widget-value">0</div>
                        <div class="widget-label">En attente</div>
                        <small class="text-muted">Non payées</small>
                    </div>
                    <div class="flex-shrink-0">
                        <i class="fas fa-clock fa-2x opacity-75"></i>
                    </div>
                </div>
            </div>
        </div>
    </div>
    
    <div class="col-lg-2 col-md-4 col-sm-6">
        <div class="card jood-widget-card jood-success-bg stats-confirmed">
            <div class="card-body">
                <div class="d-flex align-items-center">
                    <div class="flex-grow-1">
                        <div class="widget-value">0</div>
                        <div class="widget-label">Confirmées</div>
                        <small class="text-muted">Payées</small>
                    </div>
                    <div class="flex-shrink-0">
                        <i class="fas fa-check fa-2x opacity-75"></i>
                    </div>
                </div>
            </div>
        </div>
    </div>
    
    <div class="col-lg-2 col-md-4 col-sm-6">
        <div class="card jood-widget-card jood-primary-bg stats-preparing">
            <div class="card-body">
                <div class="d-flex align-items-center">
                    <div class="flex-grow-1">
                        <div class="widget-value">0</div>
                        <div class="widget-label">En préparation</div>
                        <small class="text-muted">Cuisine</small>
                    </div>
                    <div class="flex-shrink-0">
                        <i class="fas fa-fire fa-2x opacity-75"></i>
                    </div>
                </div>
            </div>
        </div>
    </div>
    
    <div class="col-lg-2 col-md-4 col-sm-6">
        <div class="card jood-widget-card jood-info-bg stats-ready">
            <div class="card-body">
                <div class="d-flex align-items-center">
                    <div class="flex-grow-1">
                        <div class="widget-value">0</div>
                        <div class="widget-label">Prêtes</div>
                        <small class="text-muted">À livrer</small>
                    </div>
                    <div class="flex-shrink-0">
                        <i class="fas fa-bell fa-2x opacity-75"></i>
                    </div>
                </div>
            </div>
        </div>
    </div>
    
    <div class="col-lg-2 col-md-4 col-sm-6">
        <div class="card jood-widget-card jood-success-bg stats-completed">
            <div class="card-body">
                <div class="d-flex align-items-center">
                    <div class="flex-grow-1">
                        <div class="widget-value">0</div>
                        <div class="widget-label">Livrées</div>
                        <small class="text-muted">Terminées</small>
                    </div>
                    <div class="flex-shrink-0">
                        <i class="fas fa-check-circle fa-2x opacity-75"></i>
                    </div>
                </div>
            </div>
        </div>
    </div>
    
    <div class="col-lg-2 col-md-4 col-sm-6">
        <div class="card jood-widget-card jood-dark-bg stats-revenue">
            <div class="card-body">
                <div class="d-flex align-items-center">
                    <div class="flex-grow-1">
                        <div class="widget-value">0.00€</div>
                        <div class="widget-label">CA Aujourd'hui</div>
                        <small class="text-muted">Total des ventes</small>
                    </div>
                    <div class="flex-shrink-0">
                        <i class="fas fa-euro-sign fa-2x opacity-75"></i>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Additional Business Insights -->
<div class="row g-4 mb-4">
    <div class="col-lg-3 col-md-6">
        <div class="card">
            <div class="card-body">
                <div class="d-flex align-items-center">
                    <div class="flex-grow-1">
                        <h6 class="card-title mb-1">Commandes moyennes</h6>
                        <h4 class="mb-0 text-primary stats-avg-order">0.00€</h4>
                        <small class="text-muted">Panier moyen</small>
                    </div>
                    <div class="flex-shrink-0">
                        <i class="fas fa-chart-line fa-2x text-primary"></i>
                    </div>
                </div>
            </div>
        </div>
    </div>
    
    <div class="col-lg-3 col-md-6">
        <div class="card">
            <div class="card-body">
                <div class="d-flex align-items-center">
                    <div class="flex-grow-1">
                        <h6 class="card-title mb-1">Commandes/Heure</h6>
                        <h4 class="mb-0 text-success stats-orders-per-hour">0</h4>
                        <small class="text-muted">Dernière heure</small>
                    </div>
                    <div class="flex-shrink-0">
                        <i class="fas fa-tachometer-alt fa-2x text-success"></i>
                    </div>
                </div>
            </div>
        </div>
    </div>
    
    <div class="col-lg-3 col-md-6">
        <div class="card">
            <div class="card-body">
                <div class="d-flex align-items-center">
                    <div class="flex-grow-1">
                        <h6 class="card-title mb-1">Taux conversion</h6>
                        <h4 class="mb-0 text-info stats-conversion-rate">0%</h4>
                        <small class="text-muted">En attente → Confirmé</small>
                    </div>
                    <div class="flex-shrink-0">
                        <i class="fas fa-percentage fa-2x text-info"></i>
                    </div>
                </div>
            </div>
        </div>
    </div>
    
    <div class="col-lg-3 col-md-6">
        <div class="card">
            <div class="card-body">
                <div class="d-flex align-items-center">
                    <div class="flex-grow-1">
                        <h6 class="card-title mb-1">Temps moyen</h6>
                        <h4 class="mb-0 text-warning stats-avg-time">--:--</h4>
                        <small class="text-muted">Préparation</small>
                    </div>
                    <div class="flex-shrink-0">
                        <i class="fas fa-stopwatch fa-2x text-warning"></i>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Filters and Search -->
<div class="row mb-4">
    <div class="col-12">
        <div class="card">
            <div class="card-header">
                <i class="icon cil-filter"></i> Filtres et Recherche
            </div>
            <div class="card-body">
                <!-- Date Range Filter for Stats -->
                <div class="row mb-3">
                    <div class="col-md-3">
                        <label for="statsDateStart" class="form-label">Période Stats - Début</label>
                        <input type="date" class="form-control" id="statsDateStart" value="{{ 'now'|date('Y-m-d') }}">
                    </div>
                    <div class="col-md-3">
                        <label for="statsDateEnd" class="form-label">Fin</label>
                        <input type="date" class="form-control" id="statsDateEnd" value="{{ 'now'|date('Y-m-d') }}">
                    </div>
                    <div class="col-md-3 d-flex align-items-end">
                        <button type="button" class="btn btn-primary me-2" id="applyDateFilter">
                            <i class="icon cil-chart-line"></i> Appliquer Stats
                        </button>
                        <button type="button" class="btn btn-outline-secondary" id="resetDateFilter">
                            <i class="icon cil-reload"></i> Aujourd'hui
                        </button>
                    </div>
                    <div class="col-md-3 d-flex align-items-end">
                        <div class="text-muted small">
                            <i class="icon cil-info"></i> 
                            <span id="currentPeriodText">Aujourd'hui</span>
                        </div>
                    </div>
                </div>
                <hr>
                <!-- Existing Order List Filters -->
                <div class="row">
                    <div class="col-md-3">
                        <label for="searchOrders" class="form-label">Recherche</label>
                        <input type="text" class="form-control" id="searchOrders" placeholder="CMD-026, nom client, email...">
                    </div>
                    <div class="col-md-2">
                        <label for="statusFilter" class="form-label">Statut</label>
                        <select class="form-select" id="statusFilter">
                            <option value="">Tous</option>
                            <!-- Options will be populated by OrderStatus utility -->
                        </select>
                    </div>
                    <div class="col-md-2">
                        <label for="dateFilter" class="form-label">Date</label>
                        <input type="date" class="form-control" id="dateFilter">
                    </div>
                    <div class="col-md-2">
                        <label for="typeFilter" class="form-label">Type</label>
                        <select class="form-select" id="typeFilter">
                            <option value="">Tous</option>
                            <option value="emporter">À emporter</option>
                            <option value="sur_place">Sur place</option>
                            <option value="livraison">Livraison</option>
                        </select>
                    </div>
                    <div class="col-md-3 d-flex align-items-end">
                        <button type="button" class="btn btn-success me-2" id="searchBtn">
                            <i class="icon cil-magnifying-glass"></i> Rechercher
                        </button>
                        <button type="button" class="btn btn-outline-secondary" id="resetBtn">
                            <i class="icon cil-x"></i> Reset
                        </button>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Orders Table -->
<div class="card">
    <div class="card-header">
        <div class="d-flex justify-content-between align-items-center">
            <h4 class="card-title mb-0">Liste des Commandes</h4>
            <div class="d-flex align-items-center gap-2">
                <span class="text-muted small">Affichage:</span>
                <select class="form-select form-select-sm" id="ordersLimit" style="width: auto;">
                    <option value="10">10</option>
                    <option value="25" selected>25</option>
                    <option value="50">50</option>
                    <option value="100">100</option>
                </select>
            </div>
        </div>
    </div>
    <div class="card-body p-0">
        <div class="table-responsive">
            <table class="table table-hover mb-0">
                <thead>
                    <tr>
                        <th class="ps-4">
                            <input type="checkbox" class="form-check-input">
                        </th>
                        <th>N° Commande</th>
                        <th>Client</th>
                        <th>Date/Heure</th>
                        <th>Type</th>
                        <th>Montant</th>
                        <th>Statut</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody id="ordersTableBody">
                    <!-- Orders will be loaded dynamically via JavaScript -->
                </tbody>
            </table>
        </div>
    </div>
    <div class="card-footer">
        <div class="d-flex justify-content-between align-items-center">
            <span class="text-muted pagination-info">Chargement...</span>
            <nav>
                <ul class="pagination pagination-sm mb-0">
                    <!-- Pagination will be generated dynamically -->
                </ul>
            </nav>
        </div>
    </div>
</div>
{% endblock %}

{% block javascripts %}
<!-- Orders API and Manager -->
<script src="{{ asset('js/admin/utils/order-status.js') }}"></script>
<script src="{{ asset('js/admin/managers/orders-api.js') }}"></script>
<script src="{{ asset('js/admin/managers/orders-manager.js') }}"></script>
{% endblock %} 